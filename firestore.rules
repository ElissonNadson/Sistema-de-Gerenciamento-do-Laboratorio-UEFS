rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.tipoUsuario == 'administrador';
    }
    
    // Helper function to check if user is professor
    function isProfessor() {
      return request.auth != null && 
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.tipoUsuario == 'professor';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Public read access to lab configuration
    match /lab/config {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User profile documents - users can read/write their own profile
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin(); // Admins can read all user profiles
      allow create: if request.auth != null; // Allow user creation during registration
    }
    
    // Laboratory management (schedules, alerts, etc.)
    match /laboratorios/{document} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Schedule management - professors can create/edit their own, admins can manage all
    match /horarios/{document} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (isProfessor() || isAdmin());
      allow update, delete: if request.auth != null && 
        (resource.data.professorId == request.auth.uid || isAdmin());
    }
    
    // Reservations - students and professors can create, admins can manage all
    match /reservations/{document} {
      allow read: if isAuthenticated(); // All authenticated users can read reservations
      allow create: if isAuthenticated(); // Any authenticated user can create reservations
      allow update: if isAdmin() || 
        (isAuthenticated() && resource.data.userId == request.auth.uid && resource.data.status == 'pending');
      allow delete: if isAdmin();
    }
    
    // Reservas (legacy support) - similar to new reservations
    match /reservas/{document} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (isProfessor() || isAdmin());
      allow update, delete: if request.auth != null && 
        (resource.data.professorId == request.auth.uid || isAdmin());
    }
    
    // Daily schedules - read by all, write by admin
    match /dailySchedules/{document} {
      allow read: if true; // Public read access for schedule information
      allow write: if isAdmin();
    }
    
    // Admin logs and actions
    match /admin_logs/{document} {
      allow read, write: if isAdmin();
    }
    
    // System notifications and alerts
    match /notificacoes/{document} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Default deny for other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}